# توکن ربات تلگرام (از @BotFather)
BOT_TOKEN=your_bot_token_here

# آیدی عددی ادمین (از @userinfobot)
ADMIN_ID=123456789

# کانال‌های مقصد (با کاما جدا شوند)
CHANNELS=@nonecorebot

# تنظیمات ارسال
BATCH_SIZE=5
BATCH_INTERVAL=120
DELAY=0
DAILY_LIMIT=200

# ویژگی‌ها
SEND_CLIENTS=true
APPROVAL_MODE=false
REMINDER_ENABLED=true

# برندینگ
BRAND_NAME=NONEcore
BRAND_CHANNEL=@nonecorebot
BRAND_BOT=@nonecore_bot
FPS_RENEWAL_URL=https://fps.ms/dashboard

# قالب‌ها (اختیاری)
CONFIG_TEXT_TEMPLATE=
CONFIG_REMARK=NONEcore | تلگرام: @nonecorebot

# مسیر دیتابیس
DATABASE_PATH=/app/data/nonecore.db

# دیباگ
DEBUG=false
LOG_LEVEL=INFO
TIMEZONE=Asia/Tehran
